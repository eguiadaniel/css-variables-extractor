{
  "compilerOptions": {
    "target": "ES2017",
    "module": "None",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["chrome"],
    "removeComments": true,
    "sourceMap": false,
    "isolatedModules": false
  },
  "include": ["src/**/*", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
