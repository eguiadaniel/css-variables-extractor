{
    "manifest_version": 3,
    "name": "Storybook CSS Variable Extractor",
    "version": "1.0",
    "description": "Extract and edit CSS variables from Storybook",
    "permissions": [
      "activeTab",
      "storage",
      "downloads",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [{
      "resources": ["variableEditor.html"],
      "matches": ["<all_urls>"]
    }]
  }